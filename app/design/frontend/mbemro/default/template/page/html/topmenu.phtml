<div class="nav-container">
    <ul id="nav">
		<?php 
		$currentCategory = Mage::registry('current_category');
		$path = ""; $ids = array();
		if (!is_null($currentCategory)) {
			$path = $currentCategory->getPath();
			$ids = explode('/', $path);
		}
		?>
		<?php $_helper = Mage::helper('catalog/category') ?>
		<?php $_categories = $_helper->getStoreCategories() ?>
		<?php $i=0;?>
		<?php foreach($_categories as $_category): ?>
		<?php $i++;?>
		<li class="level0 nav-<?php print $i;?> level-top parent<?php print (isset($ids[2]) && $ids[2] == ($_category->getId()) ? ' active' : '');?>">
			<a href="<?php echo $_helper->getCategoryUrl($_category) ?>"><span><?php echo $_category->getName() ?></span></a>
		</li>
        <?php endforeach;?>
    </ul>
</div>
