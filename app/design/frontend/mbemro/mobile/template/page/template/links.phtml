/**
 * @see Mage_Page_Block_Template_Links
 */
?>
<?php $_links = $this->getLinks(); ?>
<?php if(count($_links)>0): ?>
	<div class="row text-center" id="footer-links">
    <?php foreach($_links as $_link): ?>
        <?php if ($_link instanceof Mage_Core_Block_Abstract):?>
            <?php echo $_link->toHtml(); ?>
        <?php else: ?>
<?php
  $beforeText = $_link->getBeforeText();
  $url = $_link->getUrl();
  $title = $_link->getTitle();
  $params = $_link->getAParams();
  $label = $_link->getLabel();
  $afterText = $_link->getAfterText();
  if(is_array($title)) {
	$title = ''; //title gets to be array of objects all with home url helper core/url/getHomeUrl that raises php notice.
  }
?>

            <?php echo $beforeText ?><a href="<?php echo $url ?>" title="<?php echo $title ?>" <?php echo $params ?>><?php echo $label ?></a><?php echo $afterText ?> |
        <?php endif;?>
    <?php endforeach; ?>
    <a href="<?php print Mage::getBaseUrl();?>periodic-billing/">Periodic Billing</a> |
    <a href="<?php print Mage::getBaseUrl();?>return-policy/">Return Policy</a> |
    <a href="<?php print Mage::getBaseUrl();?>invoicing-credit/">Invoicing / Credit</a>
	</div>
<?php endif; ?>
